<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | FormosBar - Chill & Full</title>

    <script src="http://code.jquery.com/jquery-1.8.3.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



</head>
<body style="background-image:url(../../Content/img/bg.png); background-size: 27%; background-repeat: repeat;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Menu", "Menu", "Home")</li>
                    <li>@Html.ActionLink("Product Management", "Index", "Item")</li>
                    <li>@Html.ActionLink("Order Management", "Index", "OrderManager")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <button onclick="topFunction()" id="back2top" title="Go to top">Top</button>
        <hr />


    </div>
    <footer class="navbar-fixed-bottom" style="padding:0px; margin:0; position:fixed; bottom:0">
        <div class="modal-footer">
            <div class="footer-container-left">&copy; @DateTime.Now.Year FormosBar. &emsp; |&emsp; Privacy Policy&emsp; |&emsp; Terms of Use&emsp;|&emsp;Accessibility Statement&emsp;|</div>
            <div class="footer-container-right">
                <a id="zoom_in" class="glyphicon glyphicon-zoom-in"></a>
                <a id="zoom_out" class="glyphicon glyphicon-zoom-out"></a>
                <a href="" onclick="reload()" class="glyphicon glyphicon-refresh"></a>
            </div>
            <div class="footer-container-slogan">
                <img src="~/Content/img/Slogan.png" alt="Bar Slogan" title="Bar Slogan" style="max-width: 150px;" />
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
