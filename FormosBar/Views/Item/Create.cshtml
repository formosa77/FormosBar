@model FormosBar.Models.Item

@{
    ViewBag.Title = "Create A New Item";
}

<h2>Create A New Item</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="CreateItem" style="margin-top:50px;" class="mainbox col-md-5 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Create the New Item</div>
            </div>
            <div style="padding-top:30px" class="panel-body">
                <form id="loginform" class="form-horizontal" role="form">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                    @Html.ValidationMessageFor(model => model.OnShelf, "", new { @class = "text-danger" })
                    @Html.ValidationMessageFor(model => model.DefaultImageURL, "", new { @class = "text-danger" })

                    <div style="margin-bottom: 25px;" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-glass"></i></span>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { placeholder = "Item Name", @class = "form-control" } })
                    </div>

                    <div style="margin-bottom: 25px;" class="input-group">
                        @Html.DropDownListFor(model => model.Category, new List<SelectListItem>
                       { new SelectListItem{Text="Drink", Value="Drink"},
                         new SelectListItem{Text="Snack", Value="Snack"}}, "Please select", new { @class = "form-control" })
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        @Html.LabelFor(model => model.DefaultImageURL, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.DefaultImageURL, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="input-group">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(model => model.OnShelf)
                                @Html.LabelFor(model => model.OnShelf)
                            </label>
                        </div>
                    </div>

                    <div style="margin-top:20px" class="form-group">
                        Button
                        <div class="col-sm-12 controls">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
}


   

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
